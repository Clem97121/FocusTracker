<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основные цвета -->
    <Color x:Key="PrimaryColor">#1D1B1F</Color>
    <Color x:Key="AccentColor">#141314</Color>
    <Color x:Key="SecondAccentColor">#2B282E</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="PanelColor">#29292E</Color>
    <Color x:Key="PrimaryBrushColor">#2A2A3B</Color>

    <!-- Продуктивні -->
    <Color x:Key="SuccessColor">#4CD964</Color>
    <!-- обычный -->
    <Color x:Key="SuccessAccentColor">#33AA33</Color>
    <!-- яркий, активный -->

    <!-- Суміжні -->
    <Color x:Key="NeutralColor">#FFD54F</Color>
    <!-- обычный жёлтый  FFD54F-->
    <Color x:Key="NeutralAccentColor">#FFC107</Color>
    <!-- яркий FFC107-->

    <!-- Непродуктивні -->
    <Color x:Key="DangerColor">#FF6B6B</Color>
    <!-- обычный -->
    <Color x:Key="DangerAccentColor">#D9534F</Color>
    <!-- яркий -->

    <!-- Кисти (Brushes) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="SecondAccentBrush" Color="{StaticResource SecondAccentColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="SuccessAccentBrush" Color="{StaticResource SuccessAccentColor}" />
    <SolidColorBrush x:Key="NeutralBrush" Color="{StaticResource NeutralColor}" />
    <SolidColorBrush x:Key="NeutralAccentBrush" Color="{StaticResource NeutralAccentColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="DangerAccentBrush" Color="{StaticResource DangerAccentColor}" />

</ResourceDictionary>
