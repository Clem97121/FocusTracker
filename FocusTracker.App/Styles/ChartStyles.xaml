<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF">

    <SolidColorBrush x:Key="ProductiveBrush" Color="#4CAF50" />
    <SolidColorBrush x:Key="NeutralBrush" Color="#FFD54F" />
    <SolidColorBrush x:Key="UnproductiveBrush" Color="#F44336" />

    <DataTemplate x:Key="CustomTooltipTemplate">
        <Border Background="Black" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="{Binding Series.Name}" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="{Binding Value}" Foreground="White"/>
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>
